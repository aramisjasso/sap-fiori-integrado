<m:Dialog
  id="dialogEditRole"
  title="Editar Rol"
  draggable="true"
  resizable="true"
  contentWidth="600px"
  class="sapUiContentPadding"
  contentHeight="auto"
  afterClose=".onDialogClose"
  xmlns:m="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:layout="sap.ui.layout.form">

  <layout:SimpleForm
    editable="true"
    layout="ResponsiveGridLayout"
    labelSpanL="4"
    labelSpanM="4"
    emptySpanL="1"
    columnsL="2"
    columnsM="2">

    <m:Label text="ID del Rol" />
    <m:Input value="{roleDialogModel>/ROLEID}" placeholder="Ej. IdAdmin" />

    <m:Label text="Nombre del Rol" />
    <m:Input value="{roleDialogModel>/ROLENAME}" placeholder="Ej. Administrador" />

    <m:Label text="Descripción" />
    <m:Input value="{roleDialogModel>/DESCRIPTION}" placeholder="Ej. Encargado de seguridad..." />

    <core:Title text="Privilegios por Proceso" />

    <m:Label text="Aplicación" />
<m:ComboBox
  items="{applicationCatalogModel>/values}"
  selectedKey="{roleDialogModel>/NEW_APPID}"
  selectionChange=".onEditApplicationChange"
  placeholder="Selecciona una aplicación">
  <core:Item key="{applicationCatalogModel>VALUEID}" text="{applicationCatalogModel>VALUE}" />
</m:ComboBox>

<m:Label text="Página" />
<m:ComboBox
  visible="{= !!${roleDialogModel>/NEW_APPID} }"
  items="{viewCatalogModel>/values}"
  selectedKey="{roleDialogModel>/NEW_VIEWID}"
  selectionChange=".onEditViewChange"
  placeholder="Selecciona una página">
  <core:Item key="{viewCatalogModel>VALUEID}" text="{viewCatalogModel>VALUE}" />
</m:ComboBox>

<m:Label text="Proceso" />
<m:ComboBox
  visible="{= !!${roleDialogModel>/NEW_VIEWID} }"
  items="{processCatalogModel>/values}"
  selectedKey="{roleDialogModel>/NEW_PROCESSID}"
  placeholder="Selecciona un proceso">
  <core:Item key="{processCatalogModel>VALUEID}" text="{processCatalogModel>VALUE}" />
</m:ComboBox>

    <m:Label text="Privilegios" />
    <m:MultiComboBox
      items="{privilegeCatalogModel>/values}"
      selectedKeys="{roleDialogModel>/NEW_PRIVILEGES}"
      placeholder="Selecciona privilegios">
      <core:Item key="{privilegeCatalogModel>VALUEID}" text="{privilegeCatalogModel>VALUE}" />
    </m:MultiComboBox>

    <m:Button text="Agregar Privilegio" icon="sap-icon://add" press=".onAddPrivilege" />

    <m:Table items="{roleDialogModel>/PRIVILEGES}" growing="true" growingThreshold="5">
  <m:columns>
    <m:Column><m:Text text="Proceso" /></m:Column>
    <m:Column><m:Text text="Privilegios" /></m:Column>
    <m:Column><m:Text text="Página" /></m:Column>
    <m:Column><m:Text text="Aplicación" /></m:Column>
    <m:Column width="5rem" />
  </m:columns>
  <m:items>
    <m:ColumnListItem>
      <m:cells>
        <m:Text text="{roleDialogModel>PROCESSID}" />
        <m:Text text="{= ${roleDialogModel>PRIVILEGEID}.join(', ')}" />
        <m:Text text="{roleDialogModel>VIEWNAME}" />
        <m:Text text="{roleDialogModel>APPLICATIONNAME}" />
        <m:Button icon="sap-icon://decline" type="Reject" press=".onRemovePrivilege" tooltip="Eliminar" />
      </m:cells>
    </m:ColumnListItem>
  </m:items>
</m:Table>
  </layout:SimpleForm>

  <m:buttons>
    <m:Button
      text="Guardar"
      type="Emphasized"
      press=".onSaveRole" />
    <m:Button text="Cancelar" press=".onDialogClose" />
  </m:buttons>
</m:Dialog>
