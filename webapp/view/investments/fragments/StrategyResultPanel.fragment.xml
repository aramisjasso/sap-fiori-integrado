<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Panel headerText="Resumen de Simulación" width="auto" class=""  expandable="true" expanded="{viewModel>/resultPanelExpanded}">
        <content>
            <VBox visible="{strategyResultModel>/isLoading}"
                alignItems="Center"
                justifyContent="Center"
                class="sapUiSmallMargin">
                <BusyIndicator size="1.5rem"/>
                <Text text="Calculando resultados..." class="sapUiSmallMarginTop"/>
            </VBox>
            <!-- Datos Generales -->
            <VBox class="" visible="{= !${strategyResultModel>/isLoading}}">
                <Title text="Configuración" titleStyle="H4" />
                <HBox justifyContent="SpaceBetween">
                    <Label text="Estrategia:" class="sapUiTinyMarginEnd" />
                    <Text text="{strategyResultModel>/strategy}" />
                </HBox>
                <HBox justifyContent="SpaceBetween">
                    <Label text="Simbolo:" class="sapUiTinyMarginEnd" />
                    <Text text="{strategyResultModel>/symbol}" />
                </HBox>
                <HBox justifyContent="SpaceBetween">
                    <Label text="Rango:" class="sapUiTinyMarginEnd" />
                    <Text
                        text="{
                        path: 'strategyResultModel>/startDate',
                        formatter: '.formatDate'
                    } - {
                        path: 'strategyResultModel>/endDate',
                        formatter: '.formatDate'
                    }" />
                </HBox>
            </VBox>
