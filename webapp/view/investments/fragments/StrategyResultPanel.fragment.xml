            <!--Resuen
            financiero-->
            <Toolbar class="sapUiSmallMarginBottom" visible="{= !${strategyResultModel>/isLoading}}">
                <ToolbarSpacer/>
            </Toolbar>
            <VBox class="" visible="{= !${strategyResultModel>/isLoading}}">
                <Title text="Resumen Financiero" titleStyle="H4" />

                <HBox justifyContent="SpaceBetween">
                    <Label text="Acciones Compradas:" class="sapUiTinyMarginEnd" />
                    <Text text="{
                        path: 'strategyResultModel>/TOTAL_BOUGHT_UNITS',
                        formatter: '.formatNumber'
                    }" />
                </HBox>

                <HBox justifyContent="SpaceBetween">
                    <Label text="Acciones Vendidas:" class="sapUiTinyMarginEnd" />
                    <Text text="{strategyResultModel>/TOTAL_SOLD_UNITS}" />
                </HBox>

                <HBox justifyContent="SpaceBetween">
                    <Label text="Acciones Restantes:" class="sapUiTinyMarginEnd" />
                    <Text text="{strategyResultModel>/REMAINING_UNITS}" />
                </HBox>

                <HBox justifyContent="SpaceBetween">
                    <Label text="Efectivo Final:" class="sapUiTinyMarginEnd" />
                    <ObjectNumber number="{
                            path: 'strategyResultModel>/FINAL_CASH',
                            formatter: '.formatNumber'
                        }" 
                        unit="USD" />
                </HBox>

                <HBox justifyContent="SpaceBetween">
                    <Label text="Valor de Acciones:" class="sapUiTinyMarginEnd" />
                    <ObjectNumber number="{
                            path: 'strategyResultModel>/FINAL_VALUE',
                            formatter: '.formatNumber'
                        }" 
                        unit="USD" />
                </HBox>

                <HBox justifyContent="SpaceBetween">
                    <Label text="Balance Final:" class="sapUiTinyMarginEnd" />
                    <ObjectNumber number="{
                            path: 'strategyResultModel>/FINAL_BALANCE',
                            formatter: '.formatNumber'
                        }" 
                        unit="USD" />
                </HBox>

                <HBox justifyContent="SpaceBetween">
                    <Label text="Ganancia Real:" class="sapUiTinyMarginEnd" />
                    <ObjectNumber number="{
                            path: 'strategyResultModel>/REAL_PROFIT',
                            formatter: '.formatNumber'
                        }" 
                        unit="USD" state="Success"/>
                </HBox>
            </VBox>

        </content>
