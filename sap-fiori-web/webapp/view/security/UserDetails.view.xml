<mvc:View
    controllerName="com.invertions.sapfiorimodinv.controller.security.UserDetails"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:m="sap.m"
    xmlns:f="sap.ui.layout.form"
    busyIndicatorDelay="0"
>
    <m:Page
        id="UserDetailsPage"
        title="Detalles de {selectedUser>USERNAME}"
        showNavButton="true"
        navButtonPress=".onNavBack"
    >
        <m:content>
            <m:Panel
                id="UserPanel"
                width="auto"
                class="sapUiNoContentPadding"
            >
                <!-- Barra de herramientas adicional para acciones en detalles -->
                <m:headerToolbar>
                    <m:Toolbar id="UserToolbar">
                        <m:Title
                            id="Title"
                            text="User ID: {selectedUser>USERID}"
                        />
                        <m:ToolbarSpacer id="spacer" />
                        <m:Button
                            text="Editar"
                            icon="sap-icon://edit"
                            press=".onEditUser"
                        />
                        <m:Button
                            text="Eliminar"
                            icon="sap-icon://delete"
                            press=".onDeleteUser"
                        />
                    </m:Toolbar>
                </m:headerToolbar>

                <m:content>
                    <f:SimpleForm
                        id="userdetailform"
                        editable="false"
                        layout="ResponsiveGridLayout"
                        labelSpanL="3"
                        labelSpanM="3"
                        emptySpanL="4"
                        emptySpanM="4"
                        columnsL="1"
                        columnsM="1"
                    >
                        <f:content>
                            <m:Label
                                id="PrimerNombre1"
                                text="Primer Nombre"
                            />
                            <m:Text
                                id="nombre1"
                                text="{selectedUser>FIRSTNAME}"
                            />
                            <m:Label
                                id="Apellido1"
                                text="Apellidos"
                            />
                            <m:Text
                                id="apellido1"
                                text="{selectedUser>LASTNAME}"
                            />
                            <m:Label
                                id="ALIAS"
                                text="Alias"
                            />
                            <m:Text
                                id="alias"
                                text="{selectedUser>ALIAS}"
                            />
                            <m:Label
                                id="EMAIL"
                                text="Correo"
                            />
                            <m:Text
                                id="email"
                                text="{selectedUser>EMAIL}"
                            />
                            <m:Label
                                id="Cumpleanos"
                                text="Fecha de Nacimiento"
                            />
                            <m:Text
                                id="cumpleanos"
                                text="{selectedUser>BIRTHDAYDATE}"
                            />
                            <m:Label
                                id="Department"
                                text="Departamento"
                            />
                            <m:Text
                                id="department"
                                text="{selectedUser>DEPARTMENT}"
                            />
                            <m:Label
                                id="FUNCT"
                                text="Función"
                            />
                            <m:Text
                                id="function"
                                text="{selectedUser>FUNCTION}"
                            />
                            <m:Label
                                id="Direccion1"
                                text="Calle"
                            />
                            <m:Text
                                id="DireccionTx1t"
                                text="{selectedUser>STREET}"
                            />
                            <m:Label
                                id="Ciuda1d"
                                text="Ciudad"
                            />
                            <m:Text
                                id="ciudad1"
                                text="{selectedUser>CITY}, {selectedUser>STATE}"
                            />
                            <m:Label
                                id="C1P"
                                text="Código Postal"
                            />
                            <m:Text
                                id="cp1"
                                text="{selectedUser>POSTALCODE}"
                            />
                            <m:Label
                                id="Telefono1"
                                text="Telefono"
                            />
                            <m:Text
                                id="tel1"
                                text="{selectedUser>PHONENUMBER}"
                            />
                            <m:Label
                                id="Pais1"
                                text="PAÍS"
                            />
                            <m:Text
                                id="pais1"
                                text="{selectedUser>COUNTRY}"
                            />
                            <m:Label
                                id="Roles"
                                text="Roles del usuario"
                            />
                            <m:Text
                                id="roles"
                                text="{selectedUser>ROLES}"
                            />
                        </f:content>
                    </f:SimpleForm>
                </m:content>
            </m:Panel>
        </m:content>
    </m:Page>
</mvc:View>